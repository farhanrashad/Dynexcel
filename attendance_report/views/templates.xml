<odoo>
    <data>
        <template id="report_attendance_template">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row">
                            <h3 class="text-center mb32">Report from
                                <b>
                                    <t t-esc="data.get('start_date')"/>
                                </b>
                                to
                                <b>
                                    <t t-esc="data.get('end_date')"/>
                                </b>
                            </h3>
                        </div>
                        <table class="table mb32" style="table-layout:auto">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <strong>ID</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Name</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Present</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Absent</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="data.get('attendances')" t-as="l" style="page-break-inside: avoid">
                                    <td class="text-right">
                                        <span t-esc="l.get('id')"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="l.get('name')"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="l.get('present')"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-esc="l.get('absent')"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>