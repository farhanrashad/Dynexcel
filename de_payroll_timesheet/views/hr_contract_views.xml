<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>       
        <!-- salary Contract -->
        <record model="ir.ui.view" id="hr_contract_form_view">
            <field name="name">hr.contract.form.view</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']/group[1]" position="after">
                    <group>
                        <group name="timesheet" string="Timesheet">
                            <field name="payslip_timesheet" />
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
